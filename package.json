{
  "name": "tazkrtak-api",
  "description": "Tazkrtak REST API",
  "main": "dist/index.js",
  "apidoc": {
    "version": "0.0.0",
    "url": "https://tazkrtak-api.web.app"
  },
  "scripts": {
    "doc": "apidoc -i dist/ -o docs/",
    "lint": "tslint --project tsconfig.json",
