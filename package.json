    "firebase-functions": "^3.1.0",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "apidoc": "^0.18.0",
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "private": true
}
